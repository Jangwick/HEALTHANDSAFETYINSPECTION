# Health & Safety Inspections System - Environment Configuration

# Application
APP_NAME="Health & Safety Inspections"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/HEALTHANDSAFETYINSPECTION

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=health_safety_inspections
DB_USER=root
DB_PASS=

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_EXPIRATION=3600

# Session Configuration
SESSION_LIFETIME=3600
SESSION_NAME=HSI_SESSION

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/public/uploads

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-password
MAIL_FROM=noreply@lgu.gov.ph
MAIL_FROM_NAME="Health & Safety Inspections"

# SMS Configuration (optional)
SMS_API_KEY=
SMS_API_URL=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Timezone
APP_TIMEZONE=Asia/Manila

# Logging
LOG_LEVEL=debug
LOG_PATH=/logs

