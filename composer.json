{
  "name": "healthinspection/api",
  "description": "Health & Safety Inspection System API - Digital platform for Local Government Units to manage establishment inspections, compliance monitoring, and health/safety certification issuance",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-curl": "*",
    "firebase/php-jwt": "^6.10",
    "endroid/qr-code": "^5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests/",
    "test:unit": "phpunit tests/Unit",
    "test:integration": "phpunit tests/Integration",
    "lint": "phpcs --standard=PSR12 src/",
    "lint:fix": "phpcbf --standard=PSR12 src/"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
